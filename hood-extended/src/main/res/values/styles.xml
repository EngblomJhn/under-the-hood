<resources>

    <style name="HoodLibThemeOverlay" parent="ThemeOverlay.AppCompat">
        <item name="hoodTextSizeNormal">@dimen/hoodlib_standard_text_size</item>
        <item name="hoodTextSizeHeader">@dimen/hoodlib_header_text_size</item>
    </style>

    <style name="HoodLibThemeOverlay.Dark" parent="ThemeOverlay.AppCompat.Dark">
        <item name="hoodZebraColor">@color/hoodlib_zebra_color_dark</item>
    </style>

    <style name="HoodLibThemeOverlay.Light" parent="ThemeOverlay.AppCompat.Light">
        <item name="hoodZebraColor">@color/hoodlib_zebra_color</item>
    </style>

    <style name="HoodLibThemeOverlay.Dark.Small">
        <item name="hoodTextSizeNormal">@dimen/hoodlib_standard_text_size_sm</item>
        <item name="hoodTextSizeHeader">@dimen/hoodlib_header_text_size_sm</item>
    </style>

    <!-- Base application theme. -->
    <style name="HoodThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hoodLibDefaultColorPrimary</item>
        <item name="colorPrimaryDark">@color/hoodLibDefaultColorPrimaryDark</item>
        <item name="colorAccent">@color/hoodLibDefaultColorAccent</item>
        <item name="hoodZebraColor">@color/hoodlib_zebra_color</item>
        <item name="hoodTextSizeNormal">@dimen/hoodlib_standard_text_size</item>
        <item name="hoodTextSizeHeader">@dimen/hoodlib_header_text_size</item>
    </style>

    <style name="HoodThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/hoodLibDefaultColorPrimary</item>
        <item name="colorPrimaryDark">@color/hoodLibDefaultColorPrimaryDark</item>
        <item name="colorAccent">@color/hoodLibDefaultColorAccent</item>
        <item name="hoodZebraColor">@color/hoodlib_zebra_color_dark</item>
        <item name="hoodTextSizeNormal">@dimen/hoodlib_standard_text_size</item>
        <item name="hoodTextSizeHeader">@dimen/hoodlib_header_text_size</item>
    </style>
</resources>
