    <style name="HoodLibThemeOverlay.Light.Small">
        <item name="hoodTextSizeNormal">@dimen/hoodlib_standard_text_size_sm</item>
        <item name="hoodTextSizeHeader">@dimen/hoodlib_header_text_size_sm</item>
