<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="HoodThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="hoodZebraColor">#f0f0f0f0</item>
    </style>

    <style name="HoodThemeDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="hoodZebraColor">#f0595959</item>
    </style>
    <style name="HoodThemeToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:elevation" tools:targetApi="lollipop">6dp</item>
    </style>
</resources>
